{
  "name": "hello_world",
  "version": "1.0.0",
  "description": "hello world sample for Node.js 18 with Typescript",
  "main": "app.js",
  "repository": "https://github.com/awslabs/aws-sam-cli/tree/develop/samcli/local/init/templates/cookiecutter-aws-sam-hello-nodejs",
  "author": "SAM CLI",
  "license": "MIT",
  "scripts": {
    "unit": "jest",
    "lint": "eslint '*.ts'",
    "lint:fix": "npm run lint -- --quiet --fix",
    "build": "esbuild app.ts --minify-whitespace --minify-syntax --sourcemap --platform=neutral --target=es2020 --format=esm --out-extension:.js=.mjs --outdir=dist",
    "compile": "tsc",
    "test": "npm run compile && npm run unit",
    "test:coverage": "npm run test -- --coverage"
  },
  "dependencies": {
    "esbuild": "^0.19.4"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.122",
    "@types/jest": "^29.5.5",
    "@types/node": "^18.18.1",
    "@typescript-eslint/eslint-plugin": "^6.7.3",
    "@typescript-eslint/parser": "^6.7.3",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.7.0",
    "prettier": "^3.0.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  }
}
